#main
  %h1= @event_list.name

  %nav#subnav(role='navigation')
    %ul
      %li.active= link_to 'Event Lists', event_lists_path
      %li= link_to 'Events', events_path
      %li= link_to 'Reminders', '#'
      %li= link_to 'Subscribers', '#'

  #content
    %table
      %caption Event list with associated data
      %thead
        %tr
          %th Events
          %th Subscribers
          %th Due Date
      %tbody
        - @event_list.events.each do |event|
          %tr
            %td= link_to event.name, event_path(event)
            %td= number_with_delimiter(event.subscribers.count)
            %td= event.due_at.to_formatted_s(:time)
