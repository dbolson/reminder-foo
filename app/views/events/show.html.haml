#main
  %h1= @event.name

  %nav#subnav(role='navigation')
    %ul
      %li= link_to 'Event Lists', events_path
      %li.active= link_to 'Events', events_path
      %li= link_to 'Reminders', '#'
      %li= link_to 'Subscribers', '#'

  #content
    %p
      #{number_with_delimiter(@event.subscribers.count)} Subscribers
    %p
      Due on #{@event.due_at.to_formatted_s(:time)}

    %table
      %caption Event with associated data
      %thead
        %tr
          %th Reminder Date
      %tbody
        - @event.reminders.each do |reminder|
          %tr
            %td= reminder.reminded_at.to_formatted_s(:time)
